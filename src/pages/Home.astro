---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";
import Link from "../components/Link.astro";
import { Icons } from "../components/Icons.astro";
---

<BaseLayout title="API Apps">
  <div
    class="relative min-h-screen grid grid-rows-6 bg-gradient-to-r from-emerald-50 to-slate-50"
  >
    <Navbar />
    <div
      class="font-flamenco row-span-4 self-center mx-auto static z-10 text-center mobile:w-11/12 ipad:w-4/5 ipad:text-start dekstop:w-3/4"
    >
      <h1
        class="font-jost text-3xl capitalize mb-5 ipad:text-5xl dekstop:text-7xl"
      >
        Lorem ipsum dolor sit amet consectetur, adipisicing elit.
      </h1>
      <p class="mb-8 text-lg ipad:text-2xl dekstop:text-3xl">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Corrupti,
        itaque magni eius laborum error dolore quo
      </p>
      <div
        class="flex justify-center items-center text-center font-libre-franklin"
      >
        <Link
          link="/YourLocation/"
          style="flex items-center rounded px-5 py-2 mx-2 bg-emerald-400 text-slate-900 shadow text-sm hover:bg-emerald-500 hover:text-slate-50 hover:shadow-lg ipad:text-lg"
          title="Your Location"
          set:html={Icons[2].icon}
        />
        <Link
          link="/GetLocationCoordinate/"
          style="flex items-center rounded px-5 py-2 mx-2 bg-slate-900 text-slate-200 shadow text-sm hover:bg-slate-400 hover:text-slate-900 hover:shadow-lg ipad:text-lg"
          title="Search Location"
          set:html={Icons[3].icon}
        />
      </div>
    </div>
    <div class="row-span-1 self-center font-flamenco ipad:ml-8">
      <p
        class="text-lg italic text-center ipad:text-left ipad:text-2xl ipad:ml-4"
      >
        Powered by <span class="text-xl font-bold ipad:text-3xl"
          >OpenCode Company</span
        >
      </p>
    </div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="absolute z-0 opacity-5 top-8 right-0 hidden ipad:block ipad:w-2/5"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"
      ></path>
    </svg>
  </div>
</BaseLayout>
